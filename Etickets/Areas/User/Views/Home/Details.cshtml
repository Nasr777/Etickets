@model Etickets.Models.Movie

<div class="card shadow-lg p-4">
    <div class="row">
        <!-- Poster -->
        <div class="col-md-4">
            <img src="@Model.ImgUrl" alt="@Model.Name" class="img-fluid rounded" />
        </div>

        <!-- Movie Details -->
        <div class="col-md-8">
            <h2>@Model.Name</h2>
            <p><strong>Category:</strong> @Model.Category?.Name</p>
            <p><strong>Cinema:</strong> @Model.Cinema?.Name</p>
            <p><strong>Price:</strong> $@Model.Price</p>
            <p><strong>Status:</strong> @Model.MovieStatus</p>
            <p><strong>Dates:</strong> @Model.StartDate.ToString("dd MMM yyyy") - @Model.EndDate.ToString("dd MMM yyyy")</p>

            <p>@Model.Description</p>

            <!-- Trailer -->
            @if (!string.IsNullOrEmpty(Model.TrailerUrl))
            {
                <div class="mt-3">
                    <iframe width="100%" height="315"
                            src="@Model.TrailerUrl"
                            frameborder="0" allowfullscreen>
                    </iframe>
                </div>
            }

            @* <!-- Actors -->
            <div class="mt-3">
                <h5>Actors:</h5>
                <ul>
                    @foreach (var actor in Model.Actors)
                    {
                        <li>@actor.FullName</li>
                    }
                </ul>
            </div> *@

            <hr />

            <!-- Booking Form -->
            <form asp-action="Book" method="post">
                <input type="hidden" name="movieId" value="@Model.Id" />

                <div class="form-group">
                    <label for="seats">Number of Seats</label>
                    <input type="number" name="seats" min="1" class="form-control" required />
                </div>

                <button type="submit" class="btn btn-primary mt-3">
                    🎟 Book Ticket
                </button>
            </form> 
        </div>
    </div>
</div>